<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/relayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/imbCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:src="@drawable/ic_cancel" />

    </RelativeLayout>

    <ScrollView
        android:layout_below="@id/relayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="20dp"
            tools:ignore="UselessParent">

            <ImageView
                android:id="@+id/iviewLogo"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                app:srcCompat="@drawable/ic_appicon96"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/txtAppName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iviewLogo"
                android:layout_marginTop="10dp"
                android:fontFamily="cursive"
                android:gravity="center"
                android:text="Daily Novel"
                android:textAllCaps="false"
                android:textColor="#00A99D"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />


            <TextView
                android:id="@+id/txt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtAppName"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="40dp"
                android:text="Địa chỉ"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/txt3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_marker"
                android:drawablePadding="7dp"
                android:background="@android:color/transparent"
                android:text="391A, Nam Kỳ Khởi Nghĩa, Q3, TP. Hồ Chí Minh"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/txt4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt3"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="Số điện thoại"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/txt5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt4"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_phone"
                android:drawablePadding="7dp"
                android:background="@android:color/transparent"
                android:text="01225611186 - 0888076958"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/txt6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt5"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="Email liên hệ"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/txt7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt6"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_meo"
                android:drawablePadding="7dp"
                android:background="@android:color/transparent"
                android:text="Quypnps05234@fpt.edu.vn"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>